<section class="gradient-custom">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card text-white bg-primary mb-3" style="border-radius: 1rem;"> {{!--width: 800px; margin-left: -120px;!--}}
					<div class="card-body p-5 text-center" style="">

						<div class="mb-md-5 mt-md-4 pb-5">

							<h2 class="fw-bold mb-2 text-uppercase">Agregar Proyecto Nuevo</h2>

							<form action="/admin/projects/add" method="post" 
							enctype="multipart/form-data">

								<div class="form-outline form-white mb-4">
									<input type="text" name="name" autocomplete="off" required="required" />
									<label class="form-label">Nombre</label>
								</div>
								
								<div class="form-outline form-white mb-4">
									<input type="text" name="lenguage"  autocomplete="off" required="required" />
									<label class="form-label">Lenguaje</label>
								</div>
								<div class="form-outline form-white mb-4">
									<input type="text" name="type" autocomplete="off" required="required"/>
									<label class="form-label">Tipo</label>
								</div>
								<div class="form-outline form-white mb-4">
									<input type="text" name="url" autocomplete="off" required="required"/>
									<label class="form-label">URL</label>
								</div>
								<div class="form-outline form-white mb-4">
									<textarea name="description" class="form-control" autocomplete="off" style="background: var(--bs-gray-900);"></textarea>
									<label class="form-label">Descripción</label>
								</div>
								<div class="form-outline form-white mb-4">
									<input type="file" name="image" id="image" 
									class="form-control" autocomplete="off" 
									placeholder="Imagen"/>
									{{!-- <label class="form-label">Imagén</label> --}}
								</div>
								{{#if error}}
								<p class="mb-5 pb-lg-2 mb-0 text-danger">{{message}}</p>
								{{/if}}
								
								<button class="btn btn-outline-light px-5" style="margin-right:60px; margin-top:50px;" type="submit">Guardar</button>
								<a href="/admin/projects" class="btn btn-outline-light px-5"style="margin-top:50px;" >Cancelar</a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>